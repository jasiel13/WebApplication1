@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />



@if (ReporteDelMes)
{
    <div class="modal bd-example-modal-lg" tabindex="-1" style="display:block" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="@closeModalReporteDelMes">
                        <span class="font-weight-light" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <iframe id="pdfdoc" src="/api/ticket/RepMes/hola" style=" width:100%; height:500px;"></iframe>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
}


<div class="col-sm-6 col-md-4 mb-3">
    <div class="media position-relative align-items-center mb-2">
        <button class="btn btn-sm" style="background-color:#F08080; color:white" @onclick="VerPDF">
            <i class="fab fa-wpforms"></i> Ver PDF
        </button>
    </div>
</div>


@code{

    private Boolean ReporteDelMes = false;

    private void closeModalReporteDelMes()
    {
        this.ReporteDelMes = false;
    }

    public async Task VerPDF()
    {
        ReporteDelMes = true;
    }

}
